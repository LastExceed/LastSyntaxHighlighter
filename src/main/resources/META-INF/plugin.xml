<idea-plugin>
    <id>LastExceed.LastSyntaxHighlighter</id>
    <name>LastSyntaxHighlighter</name>
    <vendor email="chris20194@googlemail.com" url="http://www.github.com/LastExceed">LastExceed</vendor>

    <description><![CDATA[
    Even more syntax highlighting
    <br><br>
    IntelliJ wants 40 characters
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <annotator language="C#" implementationClass="AnnotatorCsharp"/>
        <colorSettingsPage implementation="SettingsColorCsharp"/>
        <annotator language="kotlin" implementationClass="AnnotatorKotlin"/>
        <colorSettingsPage implementation="SettingsColorKotlin"/>
        <annotator language="Rust" implementationClass="AnnotatorRust"/>
        <colorSettingsPage implementation="SettingsColorRust"/>
        <annotator language="SQL" implementationClass="AnnotatorSql"/>
        <colorSettingsPage implementation="SettingsColorSql"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>